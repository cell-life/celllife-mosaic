<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
	name="visits_report" language="groovy" pageWidth="595" pageHeight="842" whenNoDataType="AllSectionsNoDetail" columnWidth="555" 
	leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	
	<property name="ireport.zoom" value="1.5"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	
	<template><![CDATA[$P{SUBREPORT_DIR} + "report_style_template.jrtx"]]></template>
	
	<parameter name="SUBREPORT_DIR" class="java.lang.String" isForPrompting="false">
		<defaultValueExpression><![CDATA[""]]></defaultValueExpression>
	</parameter>
	
	<parameter name="start_date" class="java.util.Date"/>
	<parameter name="end_date" class="java.util.Date"/>
	
	<parameter name="female" class="java.lang.Boolean"/>
	<parameter name="male" class="java.lang.Boolean"/>
	
	<queryString>
		<![CDATA[
select program, service, visited from mosaic_visit_form_v1;
		]]>
	</queryString>
	<field name="program" class="java.lang.String"/>
	<field name="service" class="java.lang.String"/>
	<field name="visited" class="java.lang.Number"/>
	
	<variable name="sum_visited" class="java.lang.Number" calculation="Sum">
		<variableExpression><![CDATA[$F{visited}]]></variableExpression>
	</variable>
	
	<title>
		<band height="104" splitType="Stretch">
			<staticText>
				<reportElement style="report_title" mode="Transparent" x="1" y="1" width="476" height="46"/>
				<textElement verticalAlignment="Middle"/>
				<text><![CDATA[Summary report of people visited per Program & Service]]></text>
			</staticText>
			<staticText>
				<reportElement x="1" y="56" width="90" height="15"/>
				<textElement verticalAlignment="Middle">
					<font isBold="true"/>
				</textElement>
				<text><![CDATA[Categories:]]></text>
			</staticText>
			<image>
				<reportElement x="495" y="0" width="60" height="60"/>
				<imageExpression class="java.lang.String"><![CDATA[$P{SUBREPORT_DIR} + "mosaic-logo.jpg"]]></imageExpression>
			</image>
		</band>
	</title>
	<pageHeader>
		<band height="45">
			<printWhenExpression><![CDATA[$V{PAGE_NUMBER} > 1]]></printWhenExpression>
			<textField>
				<reportElement x="0" y="20" width="554" height="20">
					<printWhenExpression><![CDATA[$V{PAGE_NUMBER} > 1]]></printWhenExpression>
				</reportElement>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="8"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA["Page " + String.valueOf($V{PAGE_NUMBER}) + " of " + String.valueOf($V{PAGE_NUMBER})]]></textFieldExpression>
			</textField>
			<staticText>
				<reportElement style="nth_page_title" x="0" y="0" width="554" height="20"/>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<text><![CDATA[Campaign Subscriber Report]]></text>
			</staticText>
		</band>
	</pageHeader>
	<columnHeader>
		<band height="40" splitType="Stretch">
			<staticText>
				<reportElement style="column_header" mode="Opaque" x="0" y="0" width="105" height="40"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<text><![CDATA[Program]]></text>
			</staticText>
			<staticText>
				<reportElement style="column_header" mode="Opaque" x="105" y="0" width="205" height="40"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<text><![CDATA[Service]]></text>
			</staticText>
			<staticText>
				<reportElement style="column_header" mode="Opaque" x="310" y="0" width="80" height="40"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<text><![CDATA[Total]]></text>
			</staticText>
		</band>
	</columnHeader>
	<detail>
		<band height="20" splitType="Stretch">
			<textField>
				<reportElement x="0" y="0" width="105" height="20"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{program}]]></textFieldExpression>
			</textField>
			<textField>
				<reportElement x="105" y="0" width="205" height="20"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{service}]]></textFieldExpression>
			</textField>
			<textField isBlankWhenNull="true">
				<reportElement x="310" y="0" width="80" height="20"/>
				<box leftPadding="5" rightPadding="5">
					<pen lineWidth="0.5"/>
					<topPen lineWidth="0.5"/>
					<leftPen lineWidth="0.5"/>
					<bottomPen lineWidth="0.5"/>
					<rightPen lineWidth="0.5"/>
				</box>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<textFieldExpression class="java.lang.Number"><![CDATA[$V{sum_visited}]]></textFieldExpression>
			</textField>
		</band>
	</detail>
	<pageFooter>
		<band height="40" splitType="Stretch">
			<image>
				<reportElement x="0" y="0" width="128" height="40"/>
				<imageExpression class="java.lang.String"><![CDATA[$P{SUBREPORT_DIR} + "cell-life.png"]]></imageExpression>
			</image>
			<staticText>
				<reportElement x="322" y="0" width="114" height="20"/>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font size="8"/>
				</textElement>
				<text><![CDATA[Report generated on:]]></text>
			</staticText>
			<textField pattern="EEE, d MMM yyyy HH:mm">
				<reportElement x="436" y="0" width="119" height="20"/>
				<box leftPadding="5"/>
				<textElement verticalAlignment="Middle">
					<font size="8"/>
				</textElement>
				<textFieldExpression class="java.util.Date"><![CDATA[new java.util.Date()]]></textFieldExpression>
			</textField>
			<textField isBlankWhenNull="false">
				<reportElement key="textField-5" x="399" y="20" width="80" height="20"/>
